    <form action="/wayanad" method="post">
      <div class="card form bg-light mb-3" style="max-width: 58rem;">
        <div class="container">
          <div class="form-floating mb-3">
            <label for="floatingInput">Destination Name</label>
            <input type="text" class="form-control" id="floatingInput" name="Dest_name" value="wayanad">
          </div>
  
          <div class="form-floating mb-3">
            <label for="floatingInput">Trek Distance</label>
